<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are fucking awesome</p>
{{#if stories}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td><a href="/stories/{{_id}}">{{title}}</a></td>
      <td>{{formatDate createdAt 'MMMM Do YYYY, h:mmLss a'}}</td>
      <td><span class="dash-status">{{status}}</span></td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have not created any stories</p>
{{/if}}